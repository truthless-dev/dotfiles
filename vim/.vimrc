" Indent {{{
set autoindent
set cindent
set expandtab
filetype indent on
set shiftround
set shiftwidth=4
set softtabstop=4
set tabstop=4
let g:pyindent_open_paren = '&sw'
inoremap <s-tab> <c-d>
" }}}

" Misc {{{
set autowrite
set nocompatible
let mapleader = "\<space>"
inoremap kj <esc>
nnoremap Q <esc>
vnoremap Q <esc>
" }}}

" Searching {{{
set ignorecase
set incsearch
set smartcase
" Always use very magic mode.
nnoremap / /\v
nnoremap ? ?\v
vnoremap / /\v
vnoremap ? ?\v
" }}}

" Text Rendering {{{
set encoding=utf-8
set foldmethod=syntax
set listchars=multispace:\ \ \ \+,precedes:«,extends:»
set nowrap
" }}}

" UI {{{
set nonumber
set norelativenumber
set title
set titlestring=%{mode()}\ %l:\ %c\ \-\ %t
set wildmenu
" }}}

nnoremap <leader>r :%s/\<<C-r><C-w>\>//g<left><left>
nnoremap <leader>j 20j20k
nnoremap <leader>k 20k20j
